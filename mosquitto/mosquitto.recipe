[INFO]
arch=amd64

[VERSION]
B_GITVER -e test https://github.com/eclipse/mosquitto

[REQUIRED]
libwebsockets-B_PF libc-ares-dev uuid-dev gcc libssl-dev g++ xsltproc make docbook-xsl libcjson-dev libedit-dev libmicrohttpd-dev libsqlite3-dev 

[BUILD]
B_GET git https://github.com/eclipse/mosquitto mosquitto
cd mosquitto
git checkout tags/v$B_VERSION
sed -i "s#prefix?=/usr/local#prefix?=/opt/mosquitto#" config.mk
make WITH_WEBSOCKETS=yes CPPFLAGS=-I/opt/libwebsockets/include LDFLAGS=-L/opt/libwebsockets/lib -j $(nproc)
make install DESTDIR=$B_INSTALLDIR WITH_LIBWEBSOCKETS=yes
B_LINKFILES /opt/mosquitto/bin /usr/bin
B_LINKFILES /opt/mosquitto/sbin /usr/sbin
mkdir -p "$B_INSTALLDIR/var/log/mosquitto"
mkdir -p "$B_INSTALLDIR/var/lib/mosquitto"
mkdir -p "$B_INSTALLDIR/etc/mosquitto/conf.d"

[PKG]
type=deb
torepo=y

[DEB_DEPENDS]
echo "libuuid1,libc-ares2,libcjson1,libwebsockets-$B_PF (=$(apt-cache show libwebsockets-$B_PF | grep "^Version: " | cut -d ' ' -f 2) )"

[DEB TRIXIE]
Package: mosquitto
Version: B_VERSION
Section: mosquitto
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: Mosquitto custom B_ORG build
Homepage: https://mosquitto.org/
Depends: B_DEPENDS,libmicrohttpd12t64

[DEB BOOKWORM]
Package: mosquitto
Version: B_VERSION
Section: mosquitto
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: Mosquitto custom B_ORG build
Homepage: https://mosquitto.org/
Depends: B_DEPENDS,libmicrohttpd12
