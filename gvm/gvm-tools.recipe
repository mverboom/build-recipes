[VERSION]
B_GITVER https://github.com/greenbone/gvm-tools

[INFO]
arch=amd64
excludefromall=1

[REQUIRED]
python3 python3-setuptools python-gvm-B_PF

[BUILD DEBIAN STRETCH]
B_GET git https://github.com/greenbone/gvm-tools gvm-tools
cd gvm-tools
git checkout v$B_VERSION
mkdir -p $B_INSTALLDIR/opt/gvm/lib/python3.5/site-packages
export PYTHONPATH="$B_INSTALLDIR/opt/gvm/lib/python3.5/site-packages:/opt/gvm/lib/python3.5/site-packages:${PYTHONPATH}"
python3 setup.py install --prefix $B_INSTALLDIR/opt/gvm
rm -f $B_INSTALLDIR/opt/gvm/lib/python3.5/site-packages/site.py
rm -f $B_INSTALLDIR/opt/gvm/lib/python3.5/site-packages/easy-install.pth
B_LINKFILES /opt/gvm/bin /usr/bin

[BUILD DEBIAN BUSTER]
B_GET git https://github.com/greenbone/gvm-tools gvm-tools
cd gvm-tools
git checkout v$B_VERSION
mkdir -p $B_INSTALLDIR/opt/gvm/lib/python3.7/site-packages
export PYTHONPATH="$B_INSTALLDIR/opt/gvm/lib/python3.7/site-packages:/opt/gvm/lib/python3.7/site-packages:${PYTHONPATH}"
python3 setup.py install --prefix $B_INSTALLDIR/opt/gvm
rm -f $B_INSTALLDIR/opt/gvm/lib/python3.7/site-packages/site.py
rm -f $B_INSTALLDIR/opt/gvm/lib/python3.7/site-packages/easy-install.pth
B_LINKFILES /opt/gvm/bin /usr/bin

[PKG]
type=deb
torepo=y

[DEB]
Package: gvm-tools
Version: B_VERSION
Section: greenbone
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: Greenbone gvm-tools custom B_ORG build
Homepage: https://github.com/greenbone/gvm-tools
Depends: python3, python-gvm-B_PF
