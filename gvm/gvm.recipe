[INFO]
arch=all
excludefromall=1

[VERSION]
echo none

[BUILD]
test "$B_FORCE" -eq "1" && opt="-f"

B_METABUILD=1 # we are a meta package, skip lock checking.

case $B_VERSION in
"none") echo "Specify GVM version to build."; exit 1;
;;
11)
   build $opt -b -p -r gvm-libs@11.0.0 \
                       python-gvm@1.0.0
   # We need above packages for those below, so make them apt installable
   sudo apt-get -q update > /dev/null
   build $opt -b -p -r gvm-tools@2.0.0 \
                       ospd@2.0.0 \
                       ospd-openvas@1.0.0 \
                       openvas-smb@1.0.5 \
                       openvas@7.0.0 \
                       gvmd@9.0.0 \
                       gsa@9.0.0
;;
esac

[PKG]
type=deb

[DEB_DEPENDS]
case "$B_VERSION" in
11)
   echo "python-gvm-B_PF (>=1.0.0), gvm-tools-B_PF (>=2.0.0~), openvas-smb-B_PF (>=1.0.5~), gvm-libs-B_PF (>=11.0.0~), ospd-B_PF (>=2.0.0~), ospd-openvas-B_PF (>=1.0.0), openvas-B_PF (>=7.0.0~), gvmd-B_PF (>=9.0.0~), gsa-B_PF (>=9.0.0~)"
;;
esac

[DEB]
Package: gvm
Version: B_VERSION
Section: greenbone
Priority: optional
Architecture: all
Maintainer: B_MAIL
Description: Greenbone Vulnerability Assessment Scanner custom B_ORG build
Depends: B_DEPENDS
