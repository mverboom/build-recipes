[INFO]
arch=amd64

[VERSION]
B_GITVER https://github.com/Lissy93/dashy

[REQUIRED]
nodejs-lts-B_PF

[BUILD]
B_GET git https://github.com/Lissy93/dashy dashy
cd dashy
git checkout $B_VERSION
npm install
npm run build
cd dist
mkdir -p $B_INSTALLDIR/opt/dashy $B_INSTALLDIR/etc/dashy
mv conf.yml $B_INSTALLDIR/etc/dashy/conf.yml
mv * $B_INSTALLDIR/opt/dashy
ln -s /etc/dashy/conf.yml $B_INSTALLDIR/opt/dashy/conf.yml

[PKG]
type=deb
torepo=y

[DEB]
Package: dashy
Version: B_VERSION
Section: dashy
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: Dashy custom B_ORG build
Homepage: https://dashy.to
