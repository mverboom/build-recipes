[VERSION]
B_GITVER https://github.com/esphome/esphome

[INFO]
arch=amd64

[REQUIRED]
python3 python3-pip

[BUILD DEBIAN BULLSEYE]
B_GET git https://github.com/esphome/esphome esphome
cd esphome
git checkout $B_VERSION
export PATH=$B_INSTALLDIR/opt/esphome/bin:$PATH
pip3 install --system --prefix=$B_INSTALLDIR/opt/esphome -r requirements.txt \
   -r requirements_optional.txt
pip3 install --system --prefix=$B_INSTALLDIR/opt/esphome esphome

[PKG]
type=deb
torepo=y

[DEB]
Package: esphome
Version: B_VERSION
Section: esphome
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: ESPHome custom B_ORG build
Homepage: https://esphome.io/
Recommends: lighttpd
Depends: python3,python3-setuptools,python3-six,openssl,python3-pil,python3-requests,python3-cryptography
