[INFO]
arch=amd64
excludefromall=1

[VERSION]
B_GITVER https://github.com/badaix/snapweb

[REQUIRED]
typescript-B_PF

[BUILD]
B_GET git https://github.com/badaix/snapweb snapweb
cd snapweb
npm ci
npm run build
mkdir -p $B_INSTALLDIR/opt/snapweb
cd dist
tar cf - . | tar -C $B_INSTALLDIR/opt/snapweb -xf -

[PKG]
type=deb
torepo=y

[DEB]
Package: snapweb
Version: B_VERSION
Section: snapweb
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: snapweb custom B_ORG build
Homepage: https://github.com/badaix/snapweb
