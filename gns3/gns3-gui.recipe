[INFO]
arch=amd64
excludefromall=1

[VERSION]
B_GITVER -e a https://github.com/GNS3/gns3-gui

[REQUIRED]
python3-pip python3-venv

[BUILD]
DEST=$B_INSTALLDIR/opt/gns3-gui
mkdir -p "$DEST"
python3 -m venv "$DEST"
. $DEST/bin/activate
pip3 install gns3-gui==$B_VERSION
pushd "$DEST/bin"
shopt -s extglob
sed -i "s|$DEST|/opt/gns3-gui|g" !(__pycache__)
popd
B_LINKFILE /opt/gns3-gui/bin/gns3 /usr/bin

[PKG]
type=deb
torepo=y

[DEB]
Package: gns3-gui
Version: B_VERSION
Section: gns3-gui
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: gns3-gui custom B_ORG build
Homepage: https://github.com/GNS3/gns3-gui
Depends: python3,gns3-server-B_PF
