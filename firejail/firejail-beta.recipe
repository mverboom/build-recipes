[INFO]
arch=amd64

[VERSION]
B_GITVER -a https://github.com/netblue30/firejail

[REQUIRED]
gcc make

[BUILD]
B_GET git https://github.com/netblue30/firejail firejail
cd firejail
git checkout tags/$B_VERSION
./configure --prefix=/opt/firejail
make
make install DESTDIR=$B_INSTALLDIR
B_LINKFILES /opt/firejail/bin /usr/bin
B_LINKFILES /opt/firejail/share/man/man1 /usr/share/man/man1
B_LINKFILES /opt/firejail/share/man/man5 /usr/share/man/man5

[PKG]
type=deb
torepo=y

[DEB]
Package: firejail-beta
Version: B_VERSION
Section: firejail
Conflicts: firejail
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Homepage: https://l3net.wordpress.com/projects/firejail/
Description: Firejail B_ORG custom build

