[INFO]
arch=amd64

[VERSION]
B_GITVER https://github.com/prefix-dev/pixi/

[REQUIRED]
rustc-B_PF gcc

[BUILD]
B_GET git https://github.com/prefix-dev/pixi pixi
cd pixi
git checkout v${B_VERSION}
cargo build --release
mkdir -p $B_INSTALLDIR/usr/bin
cp target/release/pixi $B_INSTALLDIR/usr/bin

[PKG]
type=deb
torepo=y

[DEB]
Package: pixi
Version: B_VERSION
Section: pixi
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: pixi custom B_ORG build
Homepage: https://github.com/prefix-dev/pixi/
