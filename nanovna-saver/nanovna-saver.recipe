[VERSION]
B_GITVER -e -pre -f 0.11 https://github.com/NanoVNA-Saver/nanovna-saver

[INFO]
arch=amd64

[REQUIRED]
python3-venv

[BUILD DEBIAN BOOKWORM]
B_GET git https://github.com/NanoVNA-Saver/nanovna-saver nanovna-saver
cd nanovna-saver
git checkout v$B_VERSION
touch CHANGELOG.md
DEST=$B_INSTALLDIR/opt/nanovna-saver
python3 -m venv $DEST
. $DEST/bin/activate
python3 -m pip install .
deactivate
pushd "$DEST/bin"
shopt -s extglob
sed -i "s|$DEST|/opt/nanovna-saver|g" !(__pycache__)
popd

[PKG]
type=deb
torepo=y

[DEB]
Package: nanovna-saver
Version: B_VERSION
Section: nanovna-saver
Priority: optional
Architecture: B_ARCH
Maintainer: B_MAIL
Description: NanoVNA saver custom B_ORG build
Homepage: https://github.com/NanoVNA-Saver/nanovna-saver
